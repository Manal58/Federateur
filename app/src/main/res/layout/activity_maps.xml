<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33907C"
    tools:context=".MapsActivity">

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="345dp"
        android:layout_marginLeft="150px"
        android:layout_marginTop="550px"
        android:padding="5dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="174dp" />
    </LinearLayout>

    <Button
        android:id="@+id/coordonnés"
        android:layout_width="600px"
        android:layout_height="150px"
        android:layout_marginLeft="250px"
        android:layout_marginTop="1150px"
        android:backgroundTint="#FFBD59"
        android:text="أدخل الإحداثيات.."
        android:textColorHighlight="#FFFFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/confim"
        android:layout_width="300px"
        android:layout_height="150px"
        android:layout_marginLeft="410px"
        android:layout_marginTop="1350px"
        android:backgroundTint="#FFBD59"
        android:text="تاكيد"
        android:textColorHighlight="#FFFFFFFF"
        android:textSize="24sp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="اختر نوع المحصول">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:background="#FFBD59"
            android:backgroundTint="#FFBD59"
            android:inputType="none"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFBD59"
            android:textColorLink="#FFBD59" />
    </com.google.android.material.textfield.TextInputLayout>



</RelativeLayout>

